# ========== TELEGRAM ==========
# Token del bot de Telegram (obtén de BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ID del canal de Telegram para publicar imágenes (opcional)
TELEGRAM_CHANNEL_ID=your_channel_id_here

# ========== GEMINI AI ==========
# API Key para Gemini (respuestas de texto)
GEMINI_API_KEY=your_gemini_api_key_here

# API Key para Gemini 2 (generación de imágenes)
GEMINI_API_KEY_2=your_gemini_api_key_2_here

# ========== DJANGO ==========
# Clave secreta (genérala con: python manage.py shell)
# from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())
DJANGO_SECRET_KEY=your_super_secret_key_change_this_in_production

# Modo debug (0 para producción, 1 para desarrollo)
DEBUG=1

# Hosts permitidos (para producción)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========== BASE DE DATOS ==========
# Actualmente usa SQLite, para cambiar a PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/recruitment_bot

# ========== EMAIL (Opcional) ==========
# Para enviar emails desde el sistema
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# ========== AWS S3 (Opcional) ==========
# Para almacenar archivos en la nube
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name

# ========== SENTRY (Opcional) ==========
# Para monitoreo de errores en producción
SENTRY_DSN=your_sentry_dsn_here

# ========== LOGGING ==========
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ========== CACHE (Opcional) ==========
# Para caching con Redis
REDIS_URL=redis://localhost:6379/0

# ========== TIMEZONE ==========
TIME_ZONE=America/Bogota
